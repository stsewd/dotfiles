{
  "html.autoClosingTags": true,

  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.inlayHints.enable": false,

  "clangd.arguments": [
    "--fallback-style", "{BasedOnStyle: webkit, IndentWidth: 2}",
    "--clang-tidy", "--clang-tidy-checks=*",
    "--cross-file-rename",
    "--index"
  ]
}
