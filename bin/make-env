#!/bin/bash

python_version=3.10.5
venv_name="$(basename `pwd`)"
help="Usage $0 [--name virtualenv name] [--version python version]"

while (( "$#" )); do
  case "$1" in
    --name)
      venv_name=$2
      shift 2
      ;;
    --version)
      python_version=$2
      shift 2
      ;;
    -h|--help)
      echo "$help"
      exit 0
      ;;
    *)
      echo "Invalid usage."
      echo "$help"
      exit 1
      ;;
  esac
done

pyenv virtualenv $python_version $venv_name

file=".python-version"
if [ -f $file ]; then
  echo "File already exists. Overriding"
fi

echo "$venv_name" > $file
